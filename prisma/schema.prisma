generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id   String     @id @default(cuid())
  email String @unique
  password String
  name String
  role Role @default(USER)
  teamId String?  
  team Team? @relation(fields: [teamId], references: [id], onDelete: SetNull)

  //time stamps 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  //indexes
  @@index([email])
  @@index([role])
  @@index([teamId])

  @@map("users")
}


enum Role{
  ADMIN
  MANAGER
  USER
  GUEST
}


model Team {
  id   String     @id @default(cuid())
  name String @unique
  description String?
  code String @unique
  members User[]  

  //time stamps 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("teams")
}
